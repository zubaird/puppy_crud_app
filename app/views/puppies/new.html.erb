<h1 class="page-header">Add a new puppy</h1>

<%= form_for(@puppy, html:{class:"form-horizontal", role:"form"}) do |f| %>
	<div class="form-group">
		<%= f.label :name, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :name, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :breed, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :breed, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :age, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.number_field :age, class:"form-control", placeholder:"age in months" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :bio, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :bio, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :image_url, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :image_url, class:"form-control" %>
		</div>
	</div>

	<div class="actions col-sm-offset-2">
		<%= f.submit class:"btn btn-primary" %>
		<%= link_to 'Cancel', root_path, class:"btn btn-default" %>
	</div>
<% end %>